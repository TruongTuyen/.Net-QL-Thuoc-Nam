@model IEnumerable<QLThuoc.Models.EF.CayThuoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/_MainLayout.cshtml";
}

<h2>Danh sách cây thuốc</h2>

<p class="btn btn-success pull-right create_new_link">
    @Html.ActionLink("Thêm mới", "Create")
</p>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Default Example <small>Users</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p class="text-muted font-13 m-b-30">
                    DataTables has most features enabled by default, so all you need to do to use it with your own tables is to call the construction function: 
                </p>
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TenCayThuoc)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CongDung)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ChiTiet)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GhiChu)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TrangThai)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AnhMinhHoa)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.TenCayThuoc)</td>
                                <td>@Html.DisplayFor(modelItem => item.CongDung)</td>
                                <td>@Html.DisplayFor(modelItem => item.ChiTiet)</td>
                                <td>@Html.DisplayFor(modelItem => item.GhiChu)</td>
                                <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                                <td>@Html.DisplayFor(modelItem => item.AnhMinhHoa)</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
</div>
