@model QLThuoc.Models.EF.BaiThuoc

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Frontend/__Frontend.cshtml";
}

<section>
    <header>
        <span class="byline">Bài thuốc</span>
        <h2>@Html.DisplayFor(model => model.TenBaiThuoc)</h2>
        
    </header>
    <p><b>Ảnh minh họa:</b></p>
    <p><img src="~/@Html.DisplayFor(model => model.AnhMinhHoa)" alt="" style="max-width:100%;" /></p>
    <p>
        <b>Cây thuốc: </b>
    </p>
    <p>
        @if (ViewBag.DsTenCay != null) { 
            foreach (var tencay in ViewBag.DsTenCay)
            {
               @tencay <br/>
            }
        }
    </p>
    <p><b>Công dụng:</b></p>
    <p>@Html.DisplayFor(model => model.CongDung)</p>
    <p><b>Thành phần</b></p>
    <p>@Html.DisplayFor(model => model.ThanhPhan)</p>
    <p><b>Ghi chú:</b></p>
    <p>@Html.DisplayFor(model => model.GhiChu)</p>
</section>