@model QLThuoc.Models.EF.BaiThuoc

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Admin/_MainLayout.cshtml";
}


<h2>Thêm mới</h2>
<p class="btn btn-success pull-right create_new_link">
    @Html.ActionLink("Danh sách", "Index")
</p>

<!-- ádfasd-->
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Bài thuốc</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>

                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <p>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>
             
               
                <!-- start project list -->
                @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal  form-label-left">

                        <div class="form-group">
                            @Html.LabelFor(model => model.TenBaiThuoc, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenBaiThuoc, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                                @Html.ValidationMessageFor(model => model.TenBaiThuoc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12">Cây thuốc</label>
                            <div class="col-md-10">
                                <select name="DanhSachCayThuoc" class="form-control" multiple="multiple">
                                    @foreach (var item in ViewBag.ID_Caythuoc)
                                    {
                                        <option value="@item.ID">@item.TenCayThuoc</option>
                                    }
                                </select>
                             </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AnhMinhHoa, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
                            <div class="col-md-10">
                                <input type="file" name="AnhMinhHoa" value="" class="form-control"/>
                                @Html.ValidationMessageFor(model => model.AnhMinhHoa, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.CongDung, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
                            <div class="col-md-10">
                                @Html.TextArea("CongDung", null, new { @class = "form-control col-md-7 col-xs-12" })
                                @Html.ValidationMessageFor(model => model.CongDung, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ThanhPhan, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
                            <div class="col-md-10">
                                @Html.TextArea("ThanhPhan", null, new { @class = "form-control col-md-7 col-xs-12" })
                                @Html.ValidationMessageFor(model => model.ThanhPhan, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
                            <div class="col-md-10">
                                @Html.TextArea("GhiChu", null, new { @class = "form-control col-md-7 col-xs-12" })
                                @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="hidden" name="TrangThai" value="10" />
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Thêm mới" class="btn btn-primary" />
                                <input type="reset" value="Xóa" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
                <!-- end project list -->

            </div>
        </div>
    </div>

</div>
